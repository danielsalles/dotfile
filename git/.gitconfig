[user]
    # Configure your name and email
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    # Shortcuts
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

    # List all aliases
    aliases = config --get-regexp alias

    # Undo last commit
    undo = reset --soft HEAD~1

    # Show last commit
    last = log -1 HEAD

    # List contributors
    contributors = shortlog --summary --numbered

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[push]
    default = current
    followTags = true

[pull]
    rebase = true

[fetch]
    prune = true

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[rerere]
    enabled = true

[help]
    autocorrect = 1

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true